<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">


    <!-- Example link -->
    <xacro:include filename="inertial_macros.xacro" />

    <!-- Example link -->
    <link name="base_link">
    </link>

    <joint name="base_link" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="-0.1 0 0" />
    </joint>

    <!-- chassis link -->
    <link name="chassis">
        <visual>
            <origin xyz="0.15 0 0.075" />
            <geometry>
                <box size="0.3 0.3 0.15" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0.15 0 0.075" />
            <geometry>
                <box size="0.3 0.3 0.15" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0 0.075" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>
    <gazebo
        reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>


    <!-- left wheel link -->
    <link name="rear_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>
            <material name="blue" />
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>
    <gazebo
        reference="rear_left_wheel">
        <material>Gazebo/blue</material>
        <mu1 value = "0.001" />
        <mu2 value = "0.001" />
    </gazebo>


    <!-- right wheel link -->
    <link name="rear_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>
            <material name="blue" />
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>
    <gazebo
        reference="rear_right_wheel">
        <material>Gazebo/blue</material>
        <mu1 value = "0.001" />
        <mu2 value = "0.001" />
    </gazebo>

    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>
            <material name="blue" />
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="front_right_wheel">
        <material>Gazebo/blue</material>
        <mu1 value = "0.001" />
        <mu2 value = "0.001" />
    </gazebo>

    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>
            <material name="blue" />
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>
    <gazebo
        reference="front_left_wheel">
        <material>Gazebo/blue</material>
        <mu1 value = "0.001" />
        <mu2 value = "0.001" />
    </gazebo>


    <!-- right wheel joint -->
    <joint name="rear_right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="rear_right_wheel" />
        <origin xyz="0 ${-0.175} 0" rpy="${3.14/2} 0 0" />
        <axis xyz="0 0 -1" />
    </joint>

    <!-- left wheel joint -->
    <joint name="rear_left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="rear_left_wheel" />
        <origin xyz="0 ${0.175} 0" rpy="${-3.14/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>
    <!-- Conectar el steering_wheel al chasis -->


    <link name="right_steering_link">
        <inertial>
        <origin rpy="0 0 0" xyz="0 0 0" />
        <mass value="1" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        </inertial>
    </link>

    <link name="left_steering_link">
        <inertial>
        <origin rpy="0 0 0" xyz="0 0 0" />
        <mass value="1" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        </inertial>
    </link>


    <!-- Conectar right_steering_link al steering_wheel -->
    <joint name="front_right_steer_joint" type="revolute">
        <parent link="base_link" />
        <child link="right_steering_link" />
        <origin xyz="0.20 -0.175 0" />
        <axis xyz="0 0 1" />
        <limit effort="100" lower="-0.5" upper="0.5" velocity="1" />
    </joint>
    <!-- Conectar left_steering_link al steering_wheel -->
    <joint name="front_left_steer_joint" type="revolute">
        <parent link="base_link" />
        <child link="left_steering_link" />
        <origin xyz="0.20  0.175 0" />
        <axis xyz="0 0 1" />
        <limit effort="100" lower="-0.5" upper="0.5" velocity="1" />
    </joint>

    <!-- Conectar el right_steering_link a la llanta delantera derecha -->
    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="right_steering_link" />
        <child link="front_right_wheel" />
        <origin xyz="0 0 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 -1" />
    </joint>  <!-- Conectar el left_steering_link a la llanta delantera
    izquierda -->
    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="left_steering_link" />
        <child link="front_left_wheel" />
        <origin xyz="0 0 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link" />
        <child link="base_footprint" />
        <origin xyz="0 0 -0.025" />
    </joint>

    <link name="base_footprint">
    </link>

</robot>
